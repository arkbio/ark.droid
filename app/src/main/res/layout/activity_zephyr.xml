<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="io.arkeon.arkeon.zephyr">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heatOnOff"
        android:checked="false"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"

        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/airOnOff"
        android:checked="false"
        android:layout_below="@+id/heatOnOff"
        android:layout_alignStart="@+id/heatOnOff"
        android:layout_marginTop="10dp"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recircOnOff"
        android:checked="false"
        android:layout_below="@+id/airOnOff"
        android:layout_alignStart="@+id/airOnOff"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
